{
  "manifest_version": 3,
  "name": "follone for X",
  "version": "0.4.35",
  "description": "Detects risky/biasing content on X/Twitter and nudges users to verify information (Prompt API-first).",
  "permissions": [
    "offscreen",
    "storage"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "follone"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}